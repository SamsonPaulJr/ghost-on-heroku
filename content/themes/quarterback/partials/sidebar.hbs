<ul class="sidebar-inner" role="complementary" itemscope itemtype="http://schema.org/WPSideBar">

	{{! Featured}}
	<li class="widget widget-featuredposts">
	{{#get "posts" filter="featured:true" limit="3" as |featured|}}
	<section class="featured-posts">
	<h4 class="title"><span>Featured posts</span></h4>
	<ol class="widget-content clearfix">
		{{#foreach featured}}
		<li><h4 class="title"><a href="{{url}}">{{title}}</a></h4></li>
		{{/foreach}}
	</ol>
	</section>
	{{else}}
	<p>No featured posts...</p>
	{{/get}}
	</li>

	{{! Featured}}
	<li class="widget widget-author">
		<h4 class="title"><span>Tags</span></h4>
		<ul class="widget-content">
		</ul>
	</li>


	{{! Newsletter}}
	<li class="widget widget-newsletter">
		<h4 class="title"><span>Subscribe</span></h4>
		<div class="widget-content clearfix">
			<p>Get our latest article delivered to your email box</p>
			<div class="subscription-form">{{subscribe_form button_class="gh-button" input_class="gh-input" placeholder="Email address"}}</div>
		</div>
	</li>
</ul>